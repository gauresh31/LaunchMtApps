<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="5dp"
    card_view:cardMaxElevation="5dp"
    card_view:contentPadding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/apk_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="6dp"
            android:layout_toEndOf="@id/imageview"
            android:textColor="#000" />

        <TextView
            android:id="@+id/apk_package_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/apk_name"
            android:layout_marginStart="4dp"
            android:layout_toEndOf="@id/imageview"
            android:textColor="#795548" />

        <TextView
            android:id="@+id/apk_activity_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/apk_package_name"
            android:layout_marginStart="4dp"
            android:layout_toEndOf="@id/imageview"
            android:textColor="#795548" />

        <TextView
            android:id="@+id/apk_version_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/apk_activity_name"
            android:layout_marginStart="4dp"
            android:layout_toEndOf="@id/imageview"
            android:textColor="#795548" />

        <TextView
            android:id="@+id/apk_version_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/apk_version_name"
            android:layout_marginStart="4dp"
            android:layout_toEndOf="@id/imageview"
            android:textColor="#795548" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>